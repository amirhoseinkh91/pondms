<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="ir.viratech.commons.file.model" default-lazy="true">

	<joined-subclass name="NativeFile" table="NATIVE_FILES" extends="AbstractFile" schema="pond_ms">
		<key column="fileId" />
		
		<property name="name" type="string" column="fName" not-null="true" />
		<property name="size" type="long" column="fileSize" not-null="true" />
		<property name="creationDate" type="timestamp" not-null="true"  />
		<property name="modificationDate" type="timestamp" not-null="true"  />
		<property name="contentType" column="contentType" type="string" not-null="true" />
		
		<one-to-one name="fileContent" class="FileContent" cascade="all" />
		
	</joined-subclass>

</hibernate-mapping>
