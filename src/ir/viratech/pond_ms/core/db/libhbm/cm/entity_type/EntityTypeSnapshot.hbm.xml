<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="ir.viratech.commons.cm.model.entity_type" schema="commons_cm">

	<class name="EntityTypeSnapshot" table="ENTITY_TYPE_SNAPSHOTS" schema="commons_cm">
		<id name="id" type="long">
			<generator class="increment" />
		</id>

		<property name="extuid" type="string" not-null="true" unique="true" >
			<meta attribute="alternate-key">true</meta>
			<meta attribute="init">this.generateUid()</meta>
		</property>

		<many-to-one name="entityType" class="EntityType"
				column="entityTypeId" not-null="true" unique="false" unique-key="key_entityType_revision"
				insert="false" update="false"/>


		<property name="rawJsonSchema" type="text" not-null="true" unique="false"/>
		<property name="creatorUsername" type="string" not-null="false" unique="false"/>
		<property name="creationDate" type="timestamp" not-null="true" unique="false" />
		<property name="processedJsonSchema" type="text" not-null="true" unique="false"/>
		<property name="revision" type="int" not-null="true" unique="false" unique-key="key_entityType_revision"
			insert="false" update="false"/>

	</class>

</hibernate-mapping>
