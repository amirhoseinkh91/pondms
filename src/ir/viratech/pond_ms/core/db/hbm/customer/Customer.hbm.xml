<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="ir.viratech.pond_ms.model.customer">

	<class name="Customer" table="CUSTOMERS" schema="pond_ms">
		<id name="id" type="java.lang.Long">
			<generator class="increment" />
		</id>

		<property name="extuid" type="string" not-null="true" unique="true" >
			<meta attribute="alternate-key">true</meta>
			<meta attribute="init">this.generateUid()</meta>
		</property>

		<many-to-one name="user"
				class="ir.viratech.pond_ms.model.user.User"
				column="userId" not-null="true" unique="true"
				cascade="all" >
			<meta attribute="init">ir.viratech.pond_ms.model.user.dao.UserDAO.getInstance().createNew()</meta>
			<meta attribute="init-order">0</meta>
		</many-to-one>

		<property name="phoneNumber" type="string" not-null="true" unique="true" />
		<property name="email" type="string" not-null="false" unique="false" />
		<property name="biography" type="string" not-null="false" unique="false" />
		<property name="name" type="string" not-null="false" unique="false" />
		<property name="age" type="string" not-null="false" unique="false" />
		<property name="gender" type="string" not-null="false" unique="false" />
		<property name="locality" type="string" not-null="false" unique="false" />
		<property name="lotteryCode" type="string" not-null="true" unique="true"/>

		<set name="viewdGisVectorObjects" inverse="true" cascade="all-delete-orphan">
			<key column="customerId" not-null="true" unique="false" />
			<one-to-many class="ir.viratech.pond_ms.model.customer.CustomerViewedGISVectorObject" />
		</set>

		<set name="favoriteGisVectorObjects" inverse="true" cascade="all-delete-orphan">
			<key column="customerId" not-null="true" unique="false" />
			<one-to-many class="ir.viratech.pond_ms.model.customer.CustomerFavoriteGISVectorObject" />
		</set>
	</class>

</hibernate-mapping>
